<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="fill" android:orientation="vertical">
<Button android:layout_height="wrap_content" android:text="Play Adventure" android:clickable="true" android:id="@+id/Button_Play" android:layout_width="fill_parent"></Button>
<Button android:layout_height="wrap_content" android:text="Restart from beginning" android:id="@+id/Button_Restart" android:layout_width="fill_parent"></Button>
<Button android:layout_height="wrap_content" android:text="Select Adventure" android:id="@+id/Button_Select" android:layout_width="fill_parent"></Button><TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TextView_Description" android:text="This is the place where the description of the adventure would be displayed."></TextView>
</LinearLayout>
